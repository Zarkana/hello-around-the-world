<%= form_for(@language, :html => { :multipart => true }) do |f| %>
  <div class="row">
    <div class="section input-field col s8 m6 l4 offset-s1 offset-m1 offset-l2">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="no-padding section input-field col s10 offset-s1 offset-m1 offset-l2">
        <label for="language_logo" class="custom-file-upload">Choose File
          <img id="preview_logo_unloaded" src="#" alt="your image" />
          <% if @language.logo.exists? %>
            <%= image_tag @language.logo.url(:thumb), :id => 'preview_logo' %>
          <% end %>
        </label>
        <%= f.file_field :logo %>
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col s10 offset-s1 offset-m1 offset-l2">
      <%= f.button :class => 'btn-large waves-effect waves-light blue white-text btn btn-flat'%>
    </div>
  </div>
<% end %>
