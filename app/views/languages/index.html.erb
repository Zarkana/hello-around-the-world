<div class="container snippet" id="content">
  <h2 class="section-header center-align">Listing languages</h2>

  <%= link_to 'New language', new_language_path %>
  <table>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>

    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= image_tag language.logo.url %></td>
        <td><%= link_to 'Show', language_path(language) %></td>
        <td><%= link_to 'Edit', edit_language_path(language) %></td>
        <td><%= link_to 'Destroy', language_path(language),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
